<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    android:orientation="vertical"
    tools:context=".CreateSessionActivity">

    <TextView
        android:id="@+id/sessionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="24dp"
        android:textColor="#00adb5"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#00adb5"
        android:ems="10"
        android:hint="Naam (Kitepro1)"
        android:inputType="textPersonName"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textCursorDrawable="@null"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/spinnerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="25dp"
        android:labelFor="@+id/numbKiteSizes"
        android:text="Hoeveel kites?"
        android:textColor="#eeeeee"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/numbKiteSizes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#00adb5"
        android:popupBackground="#222831" />

    <EditText
        android:id="@+id/firstSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#00adb5"
        android:ems="10"
        android:hint="maat"
        android:inputType="number"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textCursorDrawable="@null"
        android:textSize="18sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/secondSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#00adb5"
        android:ems="10"
        android:hint="maat 2"
        android:inputType="number"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textCursorDrawable="@null"
        android:textSize="18sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/thirdSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#00adb5"
        android:ems="10"
        android:hint="maat 3"
        android:inputType="number"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textCursorDrawable="@null"
        android:textSize="18sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/fourthSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#00adb5"
        android:ems="10"
        android:hint="maat 4"
        android:inputType="number"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textCursorDrawable="@null"
        android:textSize="18sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/fifthSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#00adb5"
        android:ems="10"
        android:hint="maat 5"
        android:inputType="number"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textCursorDrawable="@null"
        android:textSize="18sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#00adb5"
        android:hint="Start Tijd"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textCursorDrawable="@null"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/stopTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#00adb5"
        android:hint="Stop Tijd"
        android:textColor="#eeeeee"
        android:textColorHint="#7feeeeee"
        android:textCursorDrawable="@null"
        android:textSize="18sp" />

    <Button
        android:id="@+id/startSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="#00adb5"
        android:onClick="startSession"
        android:padding="12dp"
        android:text="Start Sessie"
        android:textColor="#eeeeee"
        android:textSize="18sp" />
</LinearLayout>